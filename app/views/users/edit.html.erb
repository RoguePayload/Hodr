              <%= f.label :cname, "Company Name:", class: 'form-label' %>
              <%= f.text_field :cname, class: 'form-control', placeholder: 'MyPage' %>
            </div>

            <div class="form-group">
              <%= f.label :ljob, "Length of Employment:", class: 'form-label' %>
              <%= f.text_field :ljob, class: 'form-control', placeholder: '3-Months' %>
            </div>

            <div class="form-group">
              <%= f.label :jdesc, "Job Duties:", class: 'form-label' %>
              <%= f.text_area :jdesc, class: 'form-control', placeholder: 'Write code, setup & secure server, ensure system optimizations' %>
            </div>
          </div>

          <!-- Change User Password -->
          <div id="PWD" style="display: none">
            <h3 class="section-title" style="color: #58a6ff; text-align: center;">Password Alteration</h3>
            <p style="color: #8b949e; text-align: center;">Update your encryption key to secure your page.</p>

            <div class="form-group">
              <%= f.label :password, "New Encryption Key:", class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your new encryption key' %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm Encryption Key:", class: 'form-label' %>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your new encryption key' %>
            </div>
          </div>

          <!-- Customize User Page -->
          <div id="Customize" style="display: none">
            <h3 class="section-title" style="color: #58a6ff; text-align: center;">MyPage Customization</h3>
            <p style="color: #8b949e; text-align: center;">Make Your Page... Well, Your Page!!!</p>

            <%= f.label :background, "Background Image:", class: 'form-label' %>
            <%= f.file_field :background_image, class: 'form-control', accept: 'image/png,image/jpeg' %>
            <% if current_user.has_premium_access? %>
              <p>You can also upload animated backgrounds (GIFs).</p>
              <%= f.file_field :background_animation, class: 'form-control-file', accept: "image/gif" %>
            <% else %>
              <p>Upgrade to premium to unlock animated backgrounds.</p>
            <% end %>
            <strong>OR</strong>
            <div class="form-group">
              <%= f.label :background_color, "Choose your background color:" %>
              <%= f.select :background_color,
                  options_for_select(all_colors.map { |color|
                    [
                      color[:name],
                      color[:value],
                      { disabled: !@user.is_premium? && !["red", "green", "blue", "black", "white"].include?(color[:value]) }
                    ]
                  }, selected: @user.background_color),
                  { include_blank: 'None (use image)' },
                  { class: "form-control" } %>
            </div>

          </div>

          <div class="form-group">
            <%= f.submit "Save Configuration", class: "btn btn-outline-danger btn-block button_edit_pro" %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
