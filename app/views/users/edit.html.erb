          <%= render 'shared/error_messages', object: f.object %>

          <!-- Navigation for sections -->
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button type="button" class="btn btn-outline-success button_edit_pro" onclick="ImageBTN()">Change Your Avatar/Banner</button>
            <button type="button" class="btn btn-outline-success button_edit_pro" onclick="IdentityBTN()">Change Your Identity</button>
            <button type="button" class="btn btn-outline-success button_edit_pro" onclick="CommunicationBTN()">Change Your Contact Intel</button>
            <button type="button" class="btn btn-outline-success button_edit_pro" onclick="AccountsBTN()">Change Your External Accounts</button>
            <button type="button" class="btn btn-outline-success button_edit_pro" onclick="EducationBTN()">Change Your Education Status</button>
            <button type="button" class="btn btn-outline-success button_edit_pro" onclick="MarriageBTN()">Change Your Marital &amp; Kids</button>
            <button type="button" class="btn btn-outline-success button_edit_pro" onclick="HobbiesBTN()">Change Your Hobbies &amp; Interests</button>
            <button type="button" class="btn btn-outline-success button_edit_pro" onclick="CareerBTN()">Change Your Career Path</button>
            <button type="button" class="btn btn-outline-success button_edit_pro" onclick="PasswordBTN()">Change Your Password</button>
            <button type="button" class="btn btn-outline-success button_edit_pro" onclick="CustomizeBTN()">Customize Your Page</button>
            <!-- Add additional tabs for each section accordingly -->
          </div>

          <!-- Div Elements -->

          <!-- Change User Avatar & Banner Images -->
          <div id="UserImages" style="display: none">
            <h3 class="section-title">Change Your Avatar &amp; Banner</h3>
            <p>Display Your Desired Avatar &amp; Banner For The World To See!</p>

            <div class="form-group">
              <%= f.label :avatar, "Profile Avatar:", class: "form-label" %>
              <%= f.file_field :avatar, class: 'form-control-file', accept: "image/png,image/gif,image/jpeg" %>
            </div>

            <div class="form-group">
              <%= f.label :banner, "Profile Banner:", class: "form-label" %>
              <%= f.file_field :banner, class: 'form-control-file', accept: "image/png,image/gif,image/jpeg" %>
            </div>
          </div>

          <!-- Change User Identity -->
          <div id="UserIdentity" style="display: none">
            <h3 class="section-title" style="color: #58a6ff; text-align: center;">Your Identity</h3>
            <p style="color: #8b949e; text-align: center;">Define your essence within the pages.</p>

            <div class="form-group">
              <%= f.label :uname, "Username:", class: "form-label" %>
              <p style="color: #8b949e;">Your username can not be altered.</p>
              <%= f.text_field :uname, class: 'form-control', disabled: true %>
            </div>

            <div class="form-group">
              <%= f.label :fname, "First Name:", class: 'form-label' %>
              <%= f.text_field :fname, class: 'form-control', placeholder: 'Your First Name' %>
            </div>

            <div class="form-group">
              <%= f.label :mname, "Middle Name:", class: 'form-label' %>
              <%= f.text_field :mname, class: 'form-control', placeholder: 'Your Middle Name' %>
            </div>

            <div class="form-group">
              <%= f.label :lname, "Last Name:", class: 'form-label' %>
              <%= f.text_field :lname, class: 'form-control', placeholder: 'Your Last Name' %>
            </div>

            <div class="form-group">
              <%= f.label :bio, "About You:", class: 'form-label' %>
              <p style="color: #8b949e;">A glimpse into your story. Share your journey, achievements, or the mysteries you've uncovered.</p>
              <%= f.text_area :bio, class: 'form-control', placeholder: 'Go ahead, brag about yourself and tell us something interesting about you!' %>
            </div>
          </div>

          <!-- Change User Communication Preferences -->
          <div id="Comms" style="display: none">
            <h3 class="section-title" style="color: #58a6ff; text-align: center;">Communication Preferences</h3>
            <p style="color: #8b949e; text-align: center;">Display methods that other users can get ahold of you (OPTIONAL)</p>

            <div class="form-group">
              <%= f.label :tel, "Telephone:", class: 'form-label' %>
              <%= f.telephone_field :tel, class: 'form-control', placeholder: '817-555-0505' %>
            </div>

            <div class="form-group">
              <%= f.label :email, "Email:", class: 'form-label' %>
              <p style="color: #8b949e;">CAN NOT CHANGE YOUR EMAIL.</p>
              <%= f.email_field :email, class: 'form-control', disabled: true %>
            </div>

            <div class="form-group">
              <%= f.label :adr1, "Address #1:", class: 'form-label' %>
              <%= f.text_field :adr1, class: 'form-control', placeholder: '403 Coder BLVD' %>
            </div>

            <div class="form-group">
              <%= f.label :adr2, "Address #2:", class: 'form-label' %>
              <%= f.text_field :adr2, class: 'form-control', placeholder: '404' %>
            </div>

            <div class="form-group">
              <%= f.label :city, "City/Region:", class: 'form-label' %>
              <%= f.text_field :city, class: 'form-control', placeholder: 'Dallas' %>
            </div>

            <div class="form-group">
              <%= f.label :state, "State/Territory:", class: 'form-label' %>
              <%= f.text_field :state, class: 'form-control', placeholder: 'Texas' %>
            </div>

            <div class="form-group">
              <%= f.label :zip, "Zip:", class: 'form-label' %>
              <%= f.number_field :zip, class: 'form-control', placeholder: '76157' %>
            </div>

            <div class="form-group">
              <%= f.label :country, "Country:", class: 'form-label' %>
              <%= f.text_field :country, class: 'form-control', placeholder: 'USA' %>
            </div>
          </div>

