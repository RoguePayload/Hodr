<div class="scroll-user-widget">
  <ul class="media-list">
    <li class="media">
    <div class="media-body">
      <h3 class="media-heading block_title">
        Work Information;
      </h3>
      <h5 class="text_header">
        Job Title:
        <p class="text_intel">
        <% if @user.jtitle.present? %>
          <%= @user.jtitle %>
        <% else %>
          No Job Found
        <% end %>
      </p>
      </h5>
      <h5 class="text_header">
        Company Name:
        <p class="text_intel">
        <% if @user.cname.present? %>
          <%= @user.cname %>
        <% else %>
          No Company Name Found
        <% end %>
      </p>
      </h5>
      <h5 class="text_header">
        Length At Job:
        <p class="text_intel">
        <% if @user.ljob.present? %>
          <%= @user.ljob %>
        <% else %>
          Invalid Data
        <% end %>
      </p>
      </h5>
      <h5 class="text_header">
        Job Description:
        <p class="text_intel">
        <% if @user.jdesc.present? %>
          <%= @user.jdesc %>
        <% else %>
          No Job Description
        <% end %>
      </p>
      </h5>
    </div>
    </li>
    <li class="media">
    <div class="media-body">
      <h3 class="media-heading block_title">
        School Information;
      </h3>
      <h5 class="text_header">
        Degree &amp; Type:
        <p class="text_intel">
        <% if @user.degree.present? %>
          <%= @user.degree %>
        <% else %>
          No Brains Detected
        <% end %>
      </p>
      </h4>
      <h5 class="text_header">
        College Name:
        <p class="text_intel">
        <% if @user.sname.present? %>
          <%= @user.sname %>
        <% else %>
          No School Found
        <% end %>
      </p>
      </h5>
      <h5 class="text_header">
        Description of Studies
        <p class="text_intel">
        <% if @user.cstudies.present? %>
          <%= @user.cstudies %>
        <% else %>
          Unknown Morals
        <% end %>
      </p>
      </h5>
    </div>
    </li>
  </ul>
</div><!-- End div .scroll-user-widget -->
