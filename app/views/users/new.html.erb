<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label "Username:", class: 'user_new_title' %>
      <%= f.text_field :uname, class: 'form-control' %>

      <%= f.label "Email:", class: 'user_new_title' %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label "Password:", class: 'user_new_title' %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label "Password Confirmation:", class: 'user_new_title' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>


      <%= link_to "By creating a new account, you are agreing to Hodr's Terms & Conditions as well as our EULA (End User License Agreement)", eula_path, target: '_blank' %>
      <%= f.submit "Create my account", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
