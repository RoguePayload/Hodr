<%= form_with(model: @user) do |f| %>

  <%= render 'shared/error_messages' %>

  <%= f.label "Username:", class: 'mobile_new_text' %>
  <%= f.text_field :uname, class: 'form-control', style: 'width: 80%; background-color: #000; color: #0F0; font-family: "Play", sans-serif; float: center; text-align: center; margin: 1px auto;' %>

  <%= f.label "Email:", class: 'mobile_new_text' %>
  <%= f.email_field :email, class: 'form-control', style: 'width: 80%; background-color: #000; color: #0F0; font-family: "Play", sans-serif; float: center; text-align: center; margin: 1px auto;' %>

  <%= f.label "Password:", class: 'mobile_new_text' %>
  <%= f.password_field :password, class: 'form-control', style: 'width: 80%; background-color: #000; color: #0F0; font-family: "Play", sans-serif; float: center; text-align: center; margin: 1px auto;' %>

  <%= f.label "Password Confirmation:", class: 'mobile_new_text' %>
  <%= f.password_field :password_confirmation, class: 'form-control', style: 'width: 80%; background-color: #000; color: #0F0; font-family: "Play", sans-serif; float: center; text-align: center; margin: 1px auto;' %>


  <%= link_to "By creating a new account, you are agreing to Hodr's Terms & Conditions as well as our EULA (End User License Agreement)", eula_path, target: '_blank' %>
  <%= f.submit "Create my account", class: "btn btn-primary" %>

<% end %>
