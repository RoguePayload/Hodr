<h1 class="boards_main_title">Boards</h1>

<%= link_to 'Make A New Board', new_board_path, class: 'boards_main_new_title' %>
<br/>
<br/>
<%= form_with(url: boards_path, method: :get, local: true) do |form| %>
  <%= form.label :category_id, 'Filter by category', class: 'boards_main_name' %>
  <%= form.collection_select :category_id, @categories, :id, :name, include_blank: true, class: 'boards_drop_down' %>
  <%= form.submit 'Filter', class: 'btn btn-success' %>
<% end %><br/>
<br/>
<ul>
  <% @boards.each do |board| %>
    <li>
      <% if board.avatar.attached? %>
        <%= image_tag url_for(board.avatar), alt: 'Board Avatar', class: 'board-avatar-small' %>
      <% else %>
        <%= image_tag('board_avatar.png', alt: 'Board Avatar', class: 'board-avatar-small') %>
      <% end %>&nbsp;&nbsp;
      <%= link_to board.name, board, class: 'boards_main_name' %>
      <span class="boards_main_count">(<%= board.messages.count %> messages)</span>
        <% if current_user.admin? %>
          <%= form_with url: board, method: :delete, local: true do |form| %>
            <%= form.submit 'Delete Board', data: { confirm: 'Are you sure?' }, style: 'width: 25%; background-color: #F00; color: #000; font-family: "Orbitron", sans-serif;' %>
          <% end %>
        <% end %>
    </li><br/>
  <% end %>
</ul>
