<h1>Business Login</h1>

<%= form_with url: b_login_path, local: true do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>
  <div class="actions">
    <%= form.submit "Login" %>
  </div>
<% end %>
