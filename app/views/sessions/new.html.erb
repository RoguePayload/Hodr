<% provide(:title, 'Enter Your Page') %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(url: login_path, scope: :session, html: { class: 'form-access-decryption' }) do |f| %>

        <h2 class="text-center mb-4 create_heading">Log In</h2>
        <div class="form-group">
          <%= f.label :email, "Email:", class: 'create_title' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Password:", class: 'create_title' %>
          <%= f.password_field :password, class: 'form-control create_input' %>
        </div>

        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label create_input' do %>
            Remember me on this device
          <% end %>
        </div>

        <%= f.submit "Log In", class: "btn btn-outline-primary btn-block button_pro" %>

      <% end %>
      <div class="text-center mt-3">
        <p class="create_title">New here? <%= link_to "Sign Up Now!", signup_path, class: 'button_pro', style: 'font-size: 20px; color: green;' %></p>
      </div>
    </div>
  </div>
</div>
