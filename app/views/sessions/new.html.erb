<% provide(:title, 'Decrypting Access') %>
<div style="background: url('<%= asset_path 'hodr_login-background.png' %>') no-repeat center center fixed; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover; width: 100%; height: 100%;">

<div class="access-decryption-container" style="color: rgba(0,0,0,0.8); margin: 10px auto;">
  <div class="row justify-content-center">
    <div class="col-md-6" style="background-color: rgba(0,0,0,0.6); padding: 20px; border-radius: 8px; box-shadow: 0 0 15px #00ff00; margin: 10px;">
      <%= form_with(url: login_path, scope: :session, html: { class: 'form-access-decryption' }) do |f| %>

        <h2 class="form-heading" style="color: #58a6ff; text-align: center;">Decrypting Access</h2>
        <div class="form-group">
          <%= f.label :email, "Email:", class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Password:", class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span style="color: #00FF00;">Remember me on this device</span>
          <% end %>
        </div>

        <%= f.submit "Initiate Access", class: "btn btn-outline-primary btn-block", style: 'cursor: crosshair;' %>

      <% end %>
      <div class="registration-invite" style="margin: 20px auto; text-align: center;">
        <p style="color: #00FF00;">New operative? <%= link_to "Enlist Now!", signup_path, class: 'btn btn-outline-success', style: 'cursor: crosshair;' %></p>
      </div>
    </div>
  </div>
</div>
</div>
<style>
.access-decryption-container {
  /* Your container styling, including the dynamic background image set here */
}

.form-access-decryption .form-group label {
  color: #58a6ff; /* Neon blue for labels */
}

.form-access-decryption .form-control {
  background-color: #161B22; /* Dark background for input fields */
  border: 1px solid #30363d;
  color: #C9D1D9; /* Light text color */
}

.form-access-decryption .btn-primary {
  background-color: #007bff; /* Adjust button color to fit the theme */
  border-color: #0056b3;
}

.registration-invite .btn-warning {
  background-color: #ffc107; /* Stylish button for sign-up invitation */
  border-color: #ffcd39;
}
</style>
