<%= form_with(model: @micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field" style="width: 100%;">
    <%= f.text_area :content, placeholder: "Compose new post...", class: 'post_area' %>
  </div>
  <span class="image">
    <%= f.file_field :images, multiple: true, accept: "image/png,image/jpeg,image/gif,image/webp" %>

  </span><br/>
  <br/>
  <%= f.submit "Post", class: "btn btn-success", style: 'width: 100%;' %>

<% end %>
